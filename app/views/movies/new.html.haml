%h2 Create New Movie
 
= form_tag movies_path, :method => :post do
 
  = label :movie, :title, 'Title'
  = text_field :movie, :title
 
  = label :movie, :rating, 'Rating'
  = select :movie, :rating, ['G','PG','PG-13','R','NC-17']
 
  = label :movie, :release_date, 'Released On'
  = date_select :movie, :release_date, start_year: 1930, end_year:Date.today.year, order: [:day, :month, :year], default: { day: 1, month:1, year:1930  }
  
  = label :movie, :description, 'Description'
  = text_area :movie, 'description'
  %br
  %br
  %br
 
  = submit_tag 'Save Create'
  = link_to 'Cancel',  "/",:onclick => "window.location.replace('/movies');"