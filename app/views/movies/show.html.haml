%h2 Details about #{@movie.title}
 
%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")
 
%h3 Description:
 
%p#description= @movie.description


- if current_user
  = link_to 'Edit info', edit_movie_path(@movie)
  -# This Delete link will not really be a link, but a form:
  = button_to 'Delete', movie_path(@movie), :method => :delete
  = link_to "Cancel", movies_path
  
- else
  = 'Please sign in before edit and delete movies'
  = link_to "Cancel", movies_path



